<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B566D"
    android:layout_marginTop="96px"
    tools:context="com.medarkive.Main.EditName$PlaceholderFragment" >

    <Button
        android:id="@+id/change_name_btn"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#3469AF"
        android:text="SUBMIT"
        android:textSize="32px"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name_txt_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_name_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:textSize="32px"
        android:text="Change Name"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="fill_parent"
        android:layout_height="80px"
        android:gravity="center"
        android:layout_below="@+id/name_txt_view"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="#8589A3"
        android:ems="10"
        android:textSize="32px"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF" >

        <requestFocus />
    </EditText>

</RelativeLayout>