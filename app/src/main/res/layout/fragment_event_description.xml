<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="96px"
    android:background="#4B566D"
    tools:context="com.medarkive.Main.EventDescriptionFragment$PlaceholderFragment" >

    <Button
        android:id="@+id/save_event"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#58C5BC"
        android:text="SAVE EVENT"
        android:textColor="#FFFFFF"
        android:textSize="40px"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/save_event" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/view1"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/headline"
                android:layout_marginTop="30px"
                android:background="#8589A3" />

            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/view1"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:layout_marginLeft="30px"
                    android:gravity="center_vertical"
                    android:text="Date"
                    android:textColor="#FFFFFF"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/date"
                    android:layout_width="400px"
                    android:layout_height="100px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px" >

                    <TextView
                        android:id="@+id/date_selector"
                        android:layout_width="400px"
                        android:layout_height="100px"
                        android:background="#8589A3"
                        android:gravity="center_vertical"
                        android:padding="20px"
                        android:text="Select Date here"
                        android:textColor="#FFFFFF"
                        android:textSize="38px" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="50px"
                        android:layout_height="50px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:src="@drawable/ic_down" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/View02"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/View01"
                android:layout_marginTop="30px"
                android:background="#8589A3" />

            <RelativeLayout
                android:id="@+id/clinicalLay"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_alignLeft="@+id/date"
                android:layout_below="@+id/View02"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="Clinical"
                    android:textColor="#FFFFFF"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="400px"
                    android:layout_height="100px"
                    android:layout_above="@+id/View03"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:background="#58C5BC" >

                    <TextView
                        android:id="@+id/clinical"
                        android:layout_width="196px"
                        android:layout_height="96px"
                        android:layout_below="@+id/View02"
                        android:layout_centerVertical="true"
                        android:background="#58C5BC"
                        android:layout_alignParentLeft="true"
                        android:gravity="center"
                        android:text="Clinical"
                        android:textColor="#8688A5"
                        android:layout_marginLeft="4px"
                        android:textSize="32px" />

                    <TextView
                        android:id="@+id/non_clinical"
                        android:layout_width="196px"
                        android:layout_height="96px"
                        android:layout_alignParentRight="true"
                        android:background="#8688A5"
                        android:gravity="center"
                        android:text="Non-Clinical"
                        android:textColor="#58C5BC"
                        android:layout_marginRight="4px"
                        android:layout_centerVertical="true"
                        android:textSize="32px" />

                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/View01"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/date"
                android:background="#8589A3" />

            <View
                android:id="@+id/View04"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/View03"
                android:layout_marginTop="30px"
                android:background="#8589A3" />

            <RelativeLayout
                android:id="@+id/credit"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:layout_below="@+id/View04" >

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="150px"
                    android:layout_height="100px"
                    android:layout_marginLeft="20px"
                    android:gravity="center_vertical"
                    android:text="Credit"
                    android:textColor="#FFFFFF"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/credit_text"
                    android:layout_width="180px"
                    android:layout_height="100px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20px"
                    android:background="#8589A3"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="20px"
                    android:textColor="#FFFFFF"
                    android:textSize="40px" >

                    <requestFocus />
                </EditText>
            </RelativeLayout>

            <View
                android:id="@+id/View05"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/credit"
                android:background="#8589A3" />

            <RelativeLayout
                android:id="@+id/descriptionLay"
                android:layout_width="720px"
                android:layout_height="400px"
                android:layout_below="@+id/View05"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="300px"
                    android:layout_height="100px"
                    android:gravity="center_vertical"
                    android:text="Description"
                    android:textColor="#FFFFFF"
                    android:textSize="40px"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="680px"
                    android:layout_height="280px"
                    android:layout_below="@+id/TextView03"
                    android:background="#8589A3"
                    android:ems="10"
                    android:gravity="start"
                    android:hint="Enter description here..."
                    android:padding="20px"
                    android:textColorHint="#CBC9D9"
                    android:textSize="32px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/headline"
                android:layout_width="680px"
                android:layout_height="100px"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="34px"
                android:gravity="center"
                android:text="Headlines"
                android:textColor="#FFFFFF"
                android:textSize="40px" />

            <View
                android:id="@+id/View03"
                android:layout_width="fill_parent"
                android:layout_height="2px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/clinicalLay"
                android:background="#8589A3" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>