<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rv"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="96px"
    android:background="#4B566D"
    tools:context="com.medarkive.Main.EditName$PlaceholderFragment" >

    <Button
        android:id="@+id/submit_cpd_choice"
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#3469AF"
        android:text="SUBMIT"
        android:textSize="32px"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_cpd_choice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:text="CPD Choice"
        android:textColor="#FFFFFF"
        android:textSize="32px" />
    
    

    <RelativeLayout
        android:id="@+id/cpd_uk"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view3"
         >

    <TextView
        android:id="@+id/cpd_uk_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:text="CPD Log (UK)"
        android:padding="10px"
        android:textColor="#FFFFFF"
        android:textSize="32px" />

    <ImageView
        android:id="@+id/cpd_uk_chck_box"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_marginRight="20px"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true" />
    
    </RelativeLayout>
    
     <RelativeLayout
        android:id="@+id/cpd_international"
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/view2"
         >

    <TextView
        android:id="@+id/cpd_international_txt"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="CPD Log (International)"
        android:gravity="center"
        android:padding="10px"
        android:textColor="#FFFFFF"
        android:textSize="32px" />
    <ImageView
        android:id="@+id/cpd_inter_check_box"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="20px" />
    
    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cpd_uk"
        android:background="#8589A3" />

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20px"
        android:background="#8589A3" />


    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="4px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cpd_international"
        android:background="#8589A3" />

</RelativeLayout>